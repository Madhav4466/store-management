<div class="modal fade" id="productEditModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">  
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Product Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid d-flex flex-column justify-content-center pt-5">
                    <form class="newProduct needs-validation" novalidate id="edit-product-form">
                        <%- include("./new-product-form", {multiValues: multiValues}) %>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success modal-edit-product" value="Edit">Edit</button>
                <button type="button" class="btn btn-danger" value="Reset">Reset</button>
            </div>
        </div>
    </div>
</div>