<% layout("layouts/dashboard") %>
<div class="container-fluid d-flex flex-column justify-content-start">
    <div class="row pb-3">
        <h1 class="d-flex justify-content-start">Add Product</i></h1>
    </div>
    <div class="row mb-2">
        <form class="newProduct needs-validation" method="post" action="/products" novalidate>
            <%- include("../partials/products/new-product-form", {multiValues : multiValues}) %>
            <div class="row mt-3 d-flex justify-content-start form-actions">
                <div class="col-md-4 d-flex justify-content-start gap-1">
                    <input type="submit" class="btn btn-outline-success" value="Add">
                    <input type="reset" class="btn btn-outline-danger" value="Reset">
                </div>
                <div class="col-md-4 d-flex justify-content-between"></div>
            </div>
        </form>
    </div>
</div>