<div class="col-lg-12 p-2">
    <div class="table-responsive">
        <table class="table table-bordered table-hover rounded">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="text-center align-middle" style="width:50px;">#</th>
                    <th scope="col" class="text-center align-middle" style="width: 300px;">Invoice No <i class="fa fa-sort"></i></th>
                    <th scope="col" class="text-center align-middle">Customer Name</th>
                    <th scope="col" class="text-center align-middle">Total Amount <i class="fa fa-sort"></i></th>
                    <th scope="col" class="text-center align-middle" style="width: 100px;">Invoice Date</th>
                    <th scope="col" class="text-center align-middle" style="width: 50px;">Payment Status<i class="fa fa-sort"></i></th>
                    <th scope="col" class="text-center align-middle" style="width: 50px;">Payment Method<i class="fa fa-sort"></i></th>
                    <th scope="col" class="text-center align-middle" style="width: 100px;">Sales Person</th>
                    <th scope="col" class="text-center align-middle" style="width: 170px;">Actions</th> 
                </tr>
            </thead>
            <tbody>
                <% invoices.forEach((invoice, id) =>{ %>
                    let date = new Date(invoice.invoiceDate);
                    let formattedDate = `${date.getDate()}-${date.getMonth() + 1}-${date.getFullYear()}`;
                    <tr>
                        <td><%= invoice.invoiceNumber %></td>
                        <td><%= invoice.customer.name %></td>
                        <td><%= invoice.totalAmount %></td>
                        <td><%= date %></td>
                        <td><%= invoice.paymentStatus %></td>
                        <td><%= invoice.paymentMethod %></td>
                        <td><%= invoice.salesPerson %></td>
                        <td>
                            <button type="button" data-invoice-id="<%= invoice.id %>" aria-label="View <%= invoice.invoiceNumber %>" class="btn btn-outline-success text-center view-invoice" id="new" data-bs-toggle="modal" data-bs-target="#invoiceViewModal"><i class="fa fa-eye"></i></button>
                            <button type="button" data-invoice-id="<%= invoice.id %>" aria-label="Edit <%= invoice.invoiceNumber %>" class="btn btn-outline-success text-center edit-invoice" id="new" data-bs-toggle="modal" data-bs-target="#invoiceEditModal"><i class="fa fa-pencil"></i></button>
                            <button type="button" data-invoice-id="<%= invoice.id %>" aria-label="Delete <%= invoice.invoiceNumber %>" class="btn btn-outline-success text-center delete-invoice" id="new" data-bs-toggle="modal" data-bs-target="#deleteModal"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
               <% }) %>
            </tbody>
        </table>
    </div>
</div>
